{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "noEmit": true,
    "module": "NodeNext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "paths": {
      "#root/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
